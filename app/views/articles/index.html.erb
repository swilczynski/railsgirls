<% content_for :header do %>
	<h1>Articles List</h1>
<% end %>

<% content_for :content do %>
	<p><%= link_to "New Article", new_article_path %></p>
	<ul>
	<% @articles.each do |article| %>
		<li>
			<h1><%= article.title %></h1>
			<p><%= article.description %></p>
			<p><%= link_to "Show Details", article_path(article) %></p>
			<p><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>
		</li>
	<% end %>
	</ul>
<% end %>